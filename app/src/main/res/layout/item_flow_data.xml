<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_flow_data_create_date_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="创建时间"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_flow_data_name_show"
            app:layout_constraintEnd_toStartOf="@+id/tv_item_flow_data_create_date"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_flow_data_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="2018-08-01"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_flow_data_create_date_show"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_item_flow_data_create_date_show"
            app:layout_constraintTop_toTopOf="@+id/tv_item_flow_data_create_date_show" />

        <TextView
            android:id="@+id/tv_item_flow_data_name_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="名称"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_flow_data_create_user_show"
            app:layout_constraintEnd_toStartOf="@+id/tv_item_flow_data_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_flow_data_create_date_show" />

        <TextView
            android:id="@+id/tv_item_flow_data_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="test"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_flow_data_name_show"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_item_flow_data_name_show"
            app:layout_constraintTop_toTopOf="@+id/tv_item_flow_data_name_show" />

        <TextView
            android:id="@+id/tv_item_flow_data_create_user_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="创建人员："
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_item_flow_data_create_user"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_flow_data_name_show" />

        <TextView
            android:id="@+id/tv_item_flow_data_create_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="自动档"
            app:layout_constraintBottom_toBottomOf="@+id/tv_item_flow_data_create_user_show"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_item_flow_data_create_user_show"
            app:layout_constraintTop_toTopOf="@+id/tv_item_flow_data_create_user_show" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>